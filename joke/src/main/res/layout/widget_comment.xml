<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/line_seperator_top_border"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_avatar"
        android:contentDescription="头像" />

    <TextView
        android:id="@+id/txtNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/imageAvatar"
        android:text="加载中"
        android:textColor="#686868"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNickname"
        android:layout_below="@+id/txtNickname"
        android:layout_marginTop="4dp"
        android:text="加载中"
        android:textColor="#999999"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/txtContent"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/txtTime"
        android:layout_below="@+id/txtTime"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载中"/>
</RelativeLayout>