<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">
    <!--é¡¶-->
    <TextView
        android:id="@+id/txtPraiseCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_sentiment_satisfied_black_18dp"
        android:drawablePadding="8dp"
        android:text="0" />

    <TextView
        android:id="@+id/txtUnPraiseCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_sentiment_dissatisfied_black_18dp"
        android:drawablePadding="8dp"
        android:text="0" />

    <TextView
        android:id="@+id/txtCommentCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_comment_black_18dp"
        android:drawablePadding="8dp"
        android:text="0" />
</LinearLayout>