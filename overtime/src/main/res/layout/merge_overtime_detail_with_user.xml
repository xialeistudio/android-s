<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <!--用户基本信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <include layout="@layout/merge_user_info" />
        <!--部门 -->
        <LinearLayout
            android:id="@+id/layoutDepartments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPhone"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/txtPhone"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" />
        <!--操作区-->
        <ImageView
            android:id="@+id/imageCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:contentDescription="电话"
            android:src="@drawable/ic_call_black_24dp" />

        <ImageView
            android:id="@+id/imageSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:contentDescription="发送短信"
            android:src="@drawable/ic_sms_black_24dp" />
    </RelativeLayout>

    <include layout="@layout/line_divider" />

    <include layout="@layout/merge_overtime_detail_without_user" />
</merge>